<h1>Movies</h1>
<div id="dateFilter">
  <div class="row">
    <div class="col-md-6">
      <%= form_tag movies_path, method: :get do %>
        <div class="row">
          <div class="col-sm-4">
            <%= date_field_tag 'from_date', params[:from_date], class: 'form-control' %>
          </div>
          <div class="col-sm-4">
            <%= date_field_tag 'to_date', params[:to_date], class: 'form-control' %>
          </div>
          <div class="col-sm-4">
            <%= submit_tag 'Search by Date', class: 'btn btn-info' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div id="movies" class="row row-cols-1 row-cols-md-3 g-4 my-5">
  <% if @movies.length > 0 %>
    <% @movies.each do |movie| %>
      <div class="col">
        <%= render movie %>
      </div>

<!--        <p><%#= link_to "Show this movie", movie %></p>-->
    <% end %>
  <% else %>
    <p>No Movies are Found</p>
  <% end %>
</div>

